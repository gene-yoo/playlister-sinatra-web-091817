<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>

<h1>This is the Song Show Page</h1>

<h3>Song Name:</h3>
<ul>
  <li><%= @song.name %></li>
</ul>

<h3>Artist Name: </h3>
<ul>
  <li><a href="/artists/<%= @song.artist.slug %>"><%= @song.artist.name %></a></li>
</ul>

<h3>Genres:</h3>
  <% @song.genres.each do |genre| %>
<ul>
  <li><a href="/genres/<%= genre.slug %>"><%= genre.name %></a></li>
  <% end %>
</ul>
